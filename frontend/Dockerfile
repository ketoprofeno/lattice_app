# -------- Build stage --------
FROM node:20-alpine AS build

WORKDIR /app

# Copiamos solo el frontend real
COPY admin-ui/package*.json ./
RUN npm install

COPY admin-ui/ .
RUN npm run build

# -------- Runtime stage --------
FROM nginx:alpine

COPY --from=build /app/dist /usr/share/nginx/html

EXPOSE 80
